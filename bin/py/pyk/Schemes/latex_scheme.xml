<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE HLScheme>
<SyntaxScheme>
<!-- LaTeX Scheme -->
<scheme name="LaTeX" extensions="tex;sty">

    <context id="text/formula" format="text/formula" >
        <start>$</start>
        <stop>$</stop>
        <escape>\\</escape>
    </context>
    
    <context id="text/formula2" format="text/formula2" >
        <start>$$</start>
        <stop>$$</stop>
        <escape>\\</escape>
    </context>

    <!---->
    <words id="keyword1" format="keyword1">document center unit enumerate itemize article</words>
    <words id="keyword2" format="keyword2" >cm pt</words>

    <word id="deco2" format="deco2">\=|\*|/</word>
    <word id="deco1" format="deco1">\\</word>
    <word id="deco4" format="deco4">~|\{|\}|\[|\]</word>
    <word id="comment" format="comment" comment="true" not_in="">%</word>
    <word id="keyword0" format="keyword0">\\\w+</word>
    <word id="numbers" format="numbers">\d+</word>

</scheme>

<!-- Snippets -->
<snip>

<!-- Those snippets are very personnal, don't try to use them
within your own environment ! -->
<entry>
    <trigger>dc</trigger>
    <description>documentclass</description>
    <snippet>\documentclass[${1:options}]{${2:type}}</snippet>
</entry>

<entry>
    <trigger>beg</trigger>
    <description>begin environment</description>
    <snippet>\begin{${1:options}}
    $0
\end{$1}</snippet>
</entry>

<entry>
    <trigger>ques</trigger>
    <description>documentclass</description>
    <snippet>\begin{questions}
    $0
\end{questions}</snippet>
</entry>

<entry>
    <trigger>it</trigger>
    <description>item</description>
    <snippet>\item </snippet>
</entry>

<entry>
    <trigger>frac</trigger>
    <description>fraction</description>
    <snippet>\frac{${1:num}}{${2:denom}}</snippet>
</entry>

<entry>
    <trigger>dfrac</trigger>
    <description>dfraction</description>
    <snippet>\dfrac{${1:num}}{${2:denom}}</snippet>
</entry>

<entry>
    <trigger>exo</trigger>
    <description>exercice a points</description>
    <snippet>% ==== Exo numero ${1:num}
\exop{${2:points}}\\
</snippet>
</entry>

<entry>
    <trigger>rexop</trigger>
    <description>reset exop counter</description>
    <snippet>\setcounter{nexop}{0}</snippet>
</entry>

<entry>
    <trigger>com</trigger>
    <description>commentaire</description>
    <snippet>% ==== ${1:Mon commentaire}</snippet>
</entry>

</snip>

</SyntaxScheme>
