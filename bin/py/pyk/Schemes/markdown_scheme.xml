<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE HLScheme>
<SyntaxScheme>
<!-- Scheme -->

<scheme name="markdown" extensions="md;">

    <context id="string/triplesimple" format="string" >
        <start></start>
        <stop></stop>
        <escape></escape>
    </context>

    <word id="rst/deco" format="rst7">^(\-|=)+$</word>
    <word id="rst/lists" format="rstList">^\s*(\-|\+|\*|\d+\.)\s+</word>
    <word id="deco1" format="deco1">^(\t|\s\s\s\s).*$</word>

    <!--
    <word id="deco1" format="deco1"></word>
    <word id="deco2" format="deco2"></word>
    <word id="deco3" format="deco3"></word>
    -->

</scheme>

<!-- Snippets -->
<snip>

<entry>
<trigger id="rest">link</trigger>
<description>Add a link without reference</description>
<snippet>`${1:Name} &lt;${2:Adress}&gt;`_ $0</snippet>
</entry>

</snip>


</SyntaxScheme>
